@model RentForRoom.DBContext.tbQuyen

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>QUẢN LÝ PHÂN QUYỀN</h1>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">THÊM MỚI THÔNG TIN PHÂN QUYỀN</h5>

                        <!-- General Form Elements -->
                        <form action="/Admin/AQuyens/create" method="post" enctype="multipart/form-data">

                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Tên Quyền</label>
                                <div class="col-sm-10">
                                    <input type="text" value="@Model.TenQuyen" name="TenQuyen" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Thêm Mới</button>
                                    <a href="/Admin/AQuyens" class="btn btn-danger"> Quay Lại</a>
                                </div>
                            </div>

                        </form><!-- End General Form Elements -->

                    </div>
                </div>

            </div>


        </div>
    </section>



</main>
