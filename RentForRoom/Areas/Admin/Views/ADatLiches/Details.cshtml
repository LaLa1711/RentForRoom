@model RentForRoom.DBContext.tbDatLich

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>QUẢN LÝ THÔNG TIN ĐẶT LỊCH XEM PHÒNG</h1>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">THÔNG TIN ĐẶT LỊCH XEM PHÒNG</h5>

                        <!-- General Form Elements -->
                        <form action="/Admin/ADatLiches/Edit/@Model.IDDatLich" method="post" enctype="multipart/form-data">

                            @Html.HiddenFor(model => model.IDDatLich)

                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Họ Tên</label>
                                <div class="col-sm-10">
                                    <div class="form-control">
                                        @Html.Raw(Model.HoTen)
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Số Điện Thoại</label>
                                <div class="col-sm-10">
                                    <div class="form-control  ">
                                        @Html.Raw(Model.SDT)
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    <div class="form-control ">
                                        @Html.Raw(Model.Email)
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Số Người Ở</label>
                                <div class="col-sm-10">
                                    <div class="form-control  ">
                                        @Html.Raw(Model.SoNguoiO)
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Số Lượng Xe</label>
                                <div class="col-sm-10">
                                    <div class="form-control  ">
                                        @Html.Raw(Model.SoLuongXe)
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputDate" class="col-sm-2 col-form-label">Ngày Chuyển Vào</label>
                                <div class="col-sm-10">
                                    @if (Model.NgayChuyenVao.HasValue) // Kiểm tra xem ThoiGian có giá trị hay không
                                    {
                                        <span class="form-control">@Model.NgayChuyenVao.Value.ToString("dd/MM/yyyy")</span>
                                    }
                                    else
                                    {
                                        <span class="form-control">Không có thời gian</span>
                                    }
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputDate" class="col-sm-2 col-form-label">Ngày Xem Phòng</label>
                                <div class="col-sm-10">
                                    @if (Model.NgayXemPhong.HasValue) // Kiểm tra xem ThoiGian có giá trị hay không
                                    {
                                        <span class="form-control">@Model.NgayXemPhong.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                    }
                                    else
                                    {
                                        <span class="form-control">Không có thời gian</span>
                                    }
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Ghi Chú</label>
                                <div class="col-sm-10">
                                    <div class="form-control  ">
                                        @Html.Raw(Model.GhiChu)
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Thú Cưng</label>
                                <div class="col-sm-2">
                                    <div class="form-control text-center">
                                        <strong>

                                            @if (Model.ThuCung != true)
                                            {
                                                <span>Không</span>
                                            }
                                            else
                                            {
                                                <span>Có</span>
                                            }
                                        </strong>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Hide</label>
                                <div class="col-sm-2">
                                    <div class="form-control text-center">
                                        <strong>

                                            @if (Model.Hide != true)
                                            {
                                                <span>Còn Hoạt Động</span>
                                            }
                                            else
                                            {
                                                <span>Tạm Ngưng</span>
                                            }
                                        </strong>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-10">
                                    <a href="/Admin/ADatLiches" class="btn btn-danger"> Quay Lại</a>
                                </div>
                            </div>

                        </form><!-- End General Form Elements -->
                    </div>
                </div>
            </div>

        </div>
    </section>

</main>
