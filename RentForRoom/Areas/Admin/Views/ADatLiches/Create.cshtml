@model RentForRoom.DBContext.tbDatLich

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>QUẢN LÝ THÔNG TIN ĐẶT LỊCH XEM PHÒNG</h1>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">THÊM MỚI THÔNG TIN ĐẶT LỊCH</h5>

                        <!-- General Form Elements -->
                        <form action="/admin/ADatLiches/create" method="post" enctype="multipart/form-data">
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">ID Phòng</label>
                                <div class="col-sm-10">
                                    <select class="form-control" name="IDPhong">
                                        @Html.Action("GetIDPhong", "ADatLiches")
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Họ Tên</label>
                                <div class="col-sm-10">
                                    <input type="text" value="@Model.HoTen" name="HoTen" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Số Điện Thoại</label>
                                <div class="col-sm-10">
                                    <input type="text" value="@Model.SDT" name="SDT" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    <input type="text" value="@Model.Email" name="Gmail" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Số Người Ở</label>
                                <div class="col-sm-10">
                                    <input type="number" value="@Model.SoNguoiO" name="SoNguoiO" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Số Lượng Xe</label>
                                <div class="col-sm-10">
                                    <input type="number" value="@Model.SoLuongXe" name="SoLuongXe" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Ngày Chuyển Vào</label>
                                <div class="col-sm-10">
                                    <input type="date" value="@Model.NgayChuyenVao?.ToString(" dd-MM-yyyy")" name="NgayChuyenVao" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Ngày Xem Phòng</label>
                                <div class="col-sm-10">
                                    <input type="datetime-local" value="@Model.NgayXemPhong?.ToString(" dd-MM-yyyyTHH:mm")" name="NgayXemPhong" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Ghi Chú</label>
                                <div class="col-sm-10">
                                    <input type="text" value="@Model.GhiChu" name="GhiChu" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Thú Cưng</label>
                                <div class="col-sm-2">
                                    <select name="ThuCung" class="form-control">
                                        <option value="" @(Model.ThuCung == null ? "selected" : "")>Chọn</option>
                                        <option value="true" @(Model.ThuCung == true ? "selected" : "")>Có</option>
                                        <option value="false" @(Model.ThuCung == false ? "selected" : "")>Không</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Thêm Mới</button>
                                    <a href="/admin/ADatLiches" class="btn btn-danger"> Quay Lại</a>
                                </div>
                            </div>

                        </form><!-- End General Form Elements -->

                    </div>
                </div>

            </div>


        </div>
    </section>



</main>
