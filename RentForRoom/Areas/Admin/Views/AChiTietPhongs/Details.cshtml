@model RentForRoom.DBContext.tbChiTietPhong

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>QUẢN LÝ THÔNG TIN KHÁCH HÀNG</h1>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">THÔNG TIN KHÁCH HÀNG</h5>

                        <!-- General Form Elements -->
                        <form action="/Admin/AChiTietPhongs/Edit/@Model.IDPhong" method="post" enctype="multipart/form-data">

                            @Html.HiddenFor(model => model.IDPhong)
                            <h4><strong>Thông Tin Cơ Bản</strong></h4>
                            <div class="row mb-3">
                                <label for="DeleteImages" class="col-sm-2 col-form-label">Album Ảnh Phòng:</label>
                                <div class="col-sm-10">
                                    <div class="row">
                                        @if (ViewBag.RoomImages != null && ViewBag.RoomImages.Count > 0)
                                        {
                                            foreach (var image in ViewBag.RoomImages)
                                            {
                                                <div class="image-box" style="width: 150px;">
                                                    <img src="@Url.Content(image.HinhAnh)" class="image-box-img-top" alt="Hình ảnh" style="object-fit: cover; width: 100%; height: auto;">

                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <p>Không có hình ảnh nào được liên kết với phòng này.</p>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Host</label>
                                <div class="col-sm-10">
                                    <div class="form-control">
                                        @Html.Raw(Model.MaTaiKhoan)
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Tiêu Đề</label>
                                <div class="col-sm-10">
                                    <div class="form-control">
                                        @Html.Raw(Model.TieuDe)
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Mô Tả</label>
                                <div class="col-sm-10">
                                    <div class="form-control  ckeditor">
                                        @Html.Raw(Model.MoTa)
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <h4><strong>Vị Trí</strong></h4>
                                <div class="col-sm-3 xuong-hang">
                                    <div class="row mb-3">
                                        <label class="col-sm-3 col-form-label">Địa Chỉ</label>
                                        <div class="col-sm-8">
                                            <div class="form-control  ckeditor">
                                                @Html.Raw(Model.DiaChi)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3 xuong-hang thut-le-trai">
                                    <div class="row mb-3">
                                        <label class="col-sm-4 col-form-label">Thành Phố</label>
                                        <div class="col-sm-8">
                                            <span class="form-control" name="IDTP">
                                                @Html.Action("GetThanhPhoName", "AChiTietPhongs", new { id = Model.IDTP })
                                            </span>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-sm-3 xuong-hang">
                                    <div class="row mb-3">
                                        <label class="col-sm-3 col-form-label">Quận</label>
                                        <div class="col-sm-8">
                                            <span class="form-control" name="IDQuan">
                                                @Html.Action("GetQuanHuyenName", "AChiTietPhongs", new { id = Model.IDQuan })
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3 xuong-hang">
                                    <div class="row mb-3">
                                        <label class="col-sm-3 col-form-label">Phường</label>
                                        <div class="col-sm-8">
                                            <span class="form-control" name="IDPhong">
                                                @Html.Action("GetPhuongXaName", "AChiTietPhongs", new { id = Model.IDPhuong })
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-1 col-form-label">Link Map</label>
                                <div class="col-sm-6 thut-le-trai1">
                                    <span class="form-control" name="LinkMap">
                                        @Html.Raw(Model.LinkMap)
                                    </span>
                                </div>
                            </div>
                            <hr>
                            <div class="row mb-2">
                                <h4><strong>Giá Dịch Vụ</strong></h4>
                                <div class="col-sm-3 xuong-hang">
                                    <div class="row mb-3">
                                        <label class="col-sm-4 col-form-label">Tiền Điện</label>
                                        <div class="col-sm-6">
                                            <div class="input-group">
                                                <span class="form-control" name="TienDien">
                                                    @Html.Raw(Model.TienDien)
                                                </span>
                                                <span style="white-space: nowrap; margin-top: 7px; margin-left:5px; ">đ/KWH</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3 xuong-hang">
                                    <div class="row mb-3">
                                        <label class="col-sm-4 col-form-label">Tiền Nước</label>
                                        <div class="col-sm-8">
                                            <div class="input-group">
                                                <span class="form-control" name="TienNuoc">
                                                    @Html.Raw(Model.TienNuoc)
                                                </span>
                                                <span style="white-space: nowrap; margin-top: 7px; margin-left:5px; ">000đ/Người</span>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-sm-3 xuong-hang">
                                    <div class="row mb-3">
                                        <label class="col-sm-4 col-form-label">Phí Quản Lý</label>
                                        <div class="col-sm-8">
                                            <div class="input-group">
                                                <span class="form-control" name="TienDichVụ">
                                                    @Html.Raw(Model.TienDichVụ)
                                                </span>
                                                <span style="white-space: nowrap; margin-top: 7px; margin-left:5px; ">000đ/Phòng</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-1 col-form-label">Giá Thuê</label>
                                <div class="col-sm-3">
                                    <div class="input-group">
                                        <span class="form-control" name="GiaThue">
                                            @Html.Raw(Model.GiaThue)
                                        </span>
                                        <span style="white-space: nowrap; margin-top: 7px; margin-left:5px; ">000đ/Tháng</span>
                                    </div>
                                </div>
                            </div>
                            <hr>
                            <div class="row mb-1" style="margin-bottom: -3rem !important">
                                <h4><strong>Tiện Nghi Phòng</strong></h4>
                                <div class="col-sm-3 xuong-hang">
                                    <div class="row mb-3">
                                        <label for="inputNumber" class="col-sm-4 col-form-label">Máy Lạnh</label>
                                        <div class="col-sm-7">
                                            <div class="form-control">
                                                @Html.Raw(Model.MayLanh)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label for="inputNumber" class="col-sm-4 col-form-label">Giường</label>
                                        <div class="col-sm-7">
                                            <div class="form-control">
                                                @Html.Raw(Model.Giuong)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3 xuong-hang">
                                    <div class="row mb-3">
                                        <label for="inputNumber" class="col-sm-4 col-form-label">Tủ Đồ</label>
                                        <div class="col-sm-7">
                                            <div class="form-control">
                                                @Html.Raw(Model.TuDo)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label for="inputNumber" class="col-sm-4 col-form-label">Nệm</label>
                                        <div class="col-sm-7">
                                            <div class="form-control">
                                                @Html.Raw(Model.Nem)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3 xuong-hang">

                                    <div class="row mb-3">
                                        <label for="inputNumber" class="col-sm-4 col-form-label">Tủ Lạnh</label>
                                        <div class="col-sm-7">
                                            <div class="form-control">
                                                @Html.Raw(Model.TuLanh)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label for="inputNumber" class="col-sm-4 col-form-label">Bàn Ghế</label>
                                        <div class="col-sm-7">
                                            <div class="form-control">
                                                @Html.Raw(Model.BanGhe)
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-sm-3 xuong-hang">
                                    <div class="row mb-3">
                                        <label for="inputNumber" class="col-sm-5 col-form-label">Sofa</label>
                                        <div class="col-sm-7">
                                            <div class="form-control">
                                                @Html.Raw(Model.Sofa)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label for="inputNumber" class="col-sm-5 col-form-label">Số Phòng Ngủ</label>
                                        <div class="col-sm-7">
                                            <div class="form-control">
                                                @Html.Raw(Model.SoPhongNgu)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-3" style="visibility: hidden;">
                                        <label for="inputNumber" class="col-sm-4 col-form-label"></label>
                                        <div class="col-sm-6">
                                            <input class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr>
                            <div class="row mb-2">
                                <h4><strong>Tiện Ích Phòng</strong></h4>
                                <div class="col-sm-3" style=" margin-top: 10px; ">
                                    <div class="row mb-3">
                                        <label class="col-sm-5 col-form-label">Dạng Phòng</label>
                                        <div class="col-sm-7">
                                            <div class="form-control text-center">
                                                @if (Model.CuaSoBanCong == true)
                                                {
                                                    <span>Cửa Sổ</span>
                                                }
                                                @if (Model.CuaSoBanCong == false)
                                                {
                                                    <span>Ban Công</span>
                                                }
                                                @if (Model.CuaSoBanCong == null)
                                                {
                                                    <span>Phòng Thường</span>
                                                }
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3 xuong-hang">
                                    <div class="row mb-3">
                                        <label class="col-sm-5 col-form-label">WC</label>
                                        <div class="col-sm-7">
                                            <div class="form-control text-center">
                                                @if (Model.WC == true)
                                                {
                                                    <span>Chung</span>
                                                }
                                                @if (Model.WC == false)
                                                {
                                                    <span>Riêng</span>
                                                }
                                                @if (Model.WC == null)
                                                {
                                                    <span>Chưa Chọn</span>
                                                }
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-sm-3 xuong-hang">
                                    <div class="row mb-3">
                                        <label class="col-sm-5 col-form-label">Kệ Bếp</label>
                                        <div class="col-sm-7">
                                            <div class="form-control text-center">
                                                @if (Model.KeBep == true)
                                                {
                                                    <span>Chung</span>
                                                }
                                                @if (Model.KeBep == false)
                                                {
                                                    <span>Riêng</span>
                                                }
                                                else
                                                {
                                                    <span>Chưa Chọn</span>
                                                }
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            </div>
                            <hr>
                            <div class="row mb-3">
                                <h4><strong>Tiện Ích Trong Nhà</strong></h4>
                                <div class="col-sm-4 xuong-hang">
                                    <div class="row mb-3">
                                        <label class="col-sm-4 col-form-label">Thang</label>
                                        <div class="col-sm-6">
                                            <div class="form-control text-center">
                                                @if (Model.Thang == true)
                                                {
                                                    <span>Bộ</span>
                                                }
                                                @if (Model.Thang == false)
                                                {
                                                    <span>Máy</span>
                                                }
                                                @if (Model.Thang == null)
                                                {
                                                    <span>Chưa Chọn</span>
                                                }
                                            </div>

                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label class="col-sm-4 col-form-label">Máy Giặt</label>
                                        <div class="col-sm-6">
                                            <div class="form-control text-center">
                                                @if (Model.MayGiat == true)
                                                {
                                                    <span>Chung</span>
                                                }
                                                @if (Model.MayGiat == false)
                                                {
                                                    <span>Riêng</span>
                                                }
                                                @if (Model.MayGiat == null)
                                                {
                                                    <span>Chưa Chọn</span>
                                                }

                                            </div>

                                        </div>
                                    </div>

                                </div>
                                <div class="col-sm-4 xuong-hang">
                                    <div class="row mb-3">
                                        <label class="col-sm-4 col-form-label">Thú Cưng</label>
                                        <div class="col-sm-6">
                                            <div class="form-control text-center">
                                                @if (Model.ThuCung == true)
                                                {
                                                    <span>Được Phép Nuôi</span>
                                                }
                                                @if (Model.ThuCung == false)
                                                {
                                                    <span>Không Được Phép</span>
                                                }
                                                @if (Model.ThuCung == null)
                                                {
                                                    <span>Chưa Chọn</span>
                                                }
                                            </div>

                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label class="col-sm-4 col-form-label">Tiền Cọc</label>
                                        <div class="col-sm-6">
                                            <div class="form-control text-center">
                                                @if (Model.TienCoc == true)
                                                {
                                                    <span>Có</span>
                                                }
                                                @if (Model.TienCoc == false)
                                                {
                                                    <span>Không</span>
                                                }
                                                @if (Model.TienCoc == null)
                                                {
                                                    <span>Chưa Chọn</span>
                                                }
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4 xuong-hang">
                                    <div class="row mb-3">
                                        <label for="inputText" class="col-sm-4 col-form-label">Phương Tiện</label>
                                        <div class="col-sm-6">
                                            <div class="form-control text-center">
                                                @Html.Raw(Model.PhuongTien)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label for="inputText" class="col-sm-4 col-form-label">Giờ Giấc</label>
                                        <div class="col-sm-6">
                                            <div class="form-control text-center">
                                                @Html.Raw(Model.GioGiac)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-4 xuong-hang">
                                    <div class="row mb-3">
                                        <label for="inputText" class="col-sm-4 col-form-label">Hide</label>
                                        <div class="col-sm-6">
                                            <div class="form-control text-center">
                                                <strong>

                                                    @if (Model.Hide != true)
                                                    {
                                                        <span>Còn Hoạt Động</span>
                                                    }
                                                    else
                                                    {
                                                        <span>Tạm Ngưng</span>
                                                    }
                                                </strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4 xuong-hang">
                                    <div class="row mb-3">
                                        <label for="inputText" class="col-sm-4 col-form-label">Nổi Bật</label>
                                        <div class="col-sm-3">
                                            <div class="form-control text-center">
                                                <strong>

                                                    @if (Model.NoiBat == true)
                                                    {
                                                        <span>Bật</span>
                                                    }
                                                    else
                                                    {
                                                        <span>Tắt</span>
                                                    }
                                                </strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4 xuong-hang">
                                    <div class="row mb-3">
                                        <label for="inputText" class="col-sm-4 col-form-label">Trạng Thái Xử Lý</label>
                                        <div class="col-sm-4">
                                            <div class="form-control text-center">
                                                <strong>

                                                    @if (Model.TrangThaiXuLy != true)
                                                    {
                                                        <span>Đã Xử Lý</span>
                                                    }
                                                    else
                                                    {
                                                        <span>Chưa Xử Lý</span>
                                                    }
                                                </strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                                <div class="row mb-3">
                                    <div class="col-sm-12 d-flex justify-content-center">
                                        <a href="/Admin/AChiTietPhongs" class="btn btn-danger"> Quay Lại</a>
                                    </div>
                                </div>

</form><!-- End General Form Elements -->
                    </div>
                </div>
            </div>

        </div>
    </section>

</main>