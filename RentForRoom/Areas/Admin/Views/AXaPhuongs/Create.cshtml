@model RentForRoom.DBContext.tbXaPhuong

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>QUẢN LÝ THÔNG TIN PHƯỜNG/XÃ</h1>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">THÊM MỚI THÔNG TIN PHƯỜNG/XÃ</h5>

                        <!-- General Form Elements -->
                        <form action="/Admin/AXaPhuongs/create" method="post" enctype="multipart/form-data">

                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Chọn Quận/Huyện</label>
                                <div class="col-sm-10">
                                    <select class="form-control" name="IDQuan">
                                        @Html.Raw(Html.Action("GetQuanHuyen", "AXaPhuongs"))
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Phường/Xã</label>
                                <div class="col-sm-10">
                                    <input type="text" value="@Model.TenPhuong" name="TenPhuong" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Thêm Mới</button>
                                    <a href="/Admin/AXaPhuongs" class="btn btn-danger"> Quay Lại</a>
                                </div>
                            </div>

                        </form><!-- End General Form Elements -->

                    </div>
                </div>

            </div>


        </div>
    </section>



</main>
